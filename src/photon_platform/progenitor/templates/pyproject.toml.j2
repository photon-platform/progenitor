[project]
name = "{{org_name}}-{{project_name}}"
dynamic = ["version"]
authors = [
  { name="phi ARCHITECT", email="github@phiarchitect.com" },
]
description = "create and manage log entries for a python project"
readme = "README.rst"
requires-python = ">=3.7"
classifiers = [
    "Programming Language :: Python :: 3",
    "License :: OSI Approved :: MIT License",
    "Operating System :: OS Independent",
]
dependencies = [
    "textual",
    "rich",
    "jinja2",
]

[project.scripts]
{{project_name}} = "{{namespace}}.{{project_name}}.__main__:main"

[build-system]
requires = ["setuptools", "setuptools-scm"]
build-backend = "setuptools.build_meta"

[tool.setuptools.packages.find]
where = ["src"]
include = ["{{namespace}}"]
namespaces = true

[tool.setuptools.dynamic]
version = {attr = "{{namespace}}.{{project_name}}.__version__"}

[project.urls]
"Website" = "https://{{org_name}}.github.io/{{project_name}}"
"Repository" = "https://github.com/{{org_name}}/{{project_name}}"
"Issues" = "https://github.com/{{org_name}}/{{project_name}}/issues"
