[project]
name = "{{ github_id }}-{{ github_repo_id }}"
dynamic = ["version"]
authors = [
  { name="phi ARCHITECT", email="github@phiarchitect.com" },
]
description = "{{ description }}"
readme = "README.rst"
requires-python = ">=3.7"
classifiers = [
    "Programming Language :: Python :: 3",
    "License :: OSI Approved :: MIT License",
    "Operating System :: OS Independent",
]
dependencies = [
    "textual",
    "rich",
    "jinja2",
]

[project.scripts]
{{ github_repo_id }} = "{{ package_namespace }}.{{ package_name }}.__main__:run"

[build-system]
requires = ["setuptools", "setuptools-scm"]
build-backend = "setuptools.build_meta"

[tool.setuptools.packages.find]
where = ["src"]
include = ["{{ package_namespace }}"]
namespaces = true

[tool.setuptools.dynamic]
version = {attr = "{{ package_namespace }}.{{ package_name }}.__version__"}

[project.urls]
"Website" = "https://{{ github_id }}.github.io/{{ github_repo_id }}"
"Repository" = "https://github.com/{{ github_id }}/{{ github_repo_id }}"
"Issues" = "https://github.com/{{ github_id }}/{{ github_repo_id }}/issues"
